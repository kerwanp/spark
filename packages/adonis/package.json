{
  "name": "@sparkjs/adonis",
  "description": "Build modern applications using AdonisJS and Spark",
  "version": "0.0.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/modules/index.js",
    "./services/main": "./build/services/main.js",
    "./spark_provider": "./build/providers/spark_provider.js",
    "./spark_middleware": "./build/src/middleware/spark_middleware.js",
    "./vite": "./build/modules/vite.js",
    "./form": "./build/modules/form/main.js",
    "./types": "./build/src/types.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "index:commands": "adonis-kit index build/commands",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "c8 yarn quick:test",
    "build": "yarn clean && tsc && yarn copy:templates && yarn index:commands",
    "dev": "tsc --watch",
    "version": "yarn build",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "adonis",
    "adonisjs",
    "sparkjs",
    "spark",
    "jsx",
    "js",
    "typescript"
  ],
  "author": {
    "name": "Martin Paucot",
    "email": "contact@martin-paucot.fr"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kerwanp/spark",
    "directory": "packages/adonis"
  },
  "bugs": {
    "url": "https://github.com/sparkjs/spark/issues"
  },
  "homepage": "https://sparkjs.run",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/assembler": "^8.0.0-next.26",
    "@adonisjs/core": "^7.0.0-next.16",
    "@adonisjs/shield": "^9.0.0-next.2",
    "@adonisjs/vite": "^5.1.0-next.2",
    "@japa/assert": "^4.2.0",
    "@japa/expect": "^3.0.7",
    "@japa/expect-type": "^2.0.4",
    "@japa/file-system": "^3.0.0",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.0.0",
    "@sparkjs/eslint-config": "workspace:*",
    "@sparkjs/spark": "workspace:*",
    "@sparkjs/typescript-config": "workspace:*",
    "@swc/core": "1.15.5",
    "@types/escape-html": "^1",
    "@types/lodash.get": "^4",
    "@types/node": "^25.0.2",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^7.0.0",
    "prettier": "^3.7.4",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^7.0.0-next.16",
    "@sparkjs/spark": "workspace:*"
  },
  "dependencies": {
    "@sindresorhus/is": "^7.2.0",
    "@standard-schema/spec": "^1.1.0",
    "type-fest": "^5.3.1"
  },
  "optionalDependencies": {
    "@adonisjs/shield": "^9.0.0-next.2",
    "@adonisjs/vite": "^5.1.0-next.2"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
