{
  "name": "@sparkjs/spark",
  "description": "Light-weight server-side JSX runtime",
  "version": "0.0.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/modules/index.js",
    "./jsx-runtime": "./build/modules/jsx_runtime.js",
    "./render": "./build/modules/render.js",
    "./utils": "./build/modules/utils.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "c8 yarn quick:test",
    "build": "yarn clean && tsc",
    "dev": "tsc --watch",
    "version": "yarn build",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "spark",
    "sparkjs",
    "jsx",
    "tsx",
    "typescript"
  ],
  "author": {
    "name": "Martin Paucot",
    "email": "contact@martin-paucot.fr"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kerwanp/spark",
    "directory": "packages/spark"
  },
  "bugs": {
    "url": "https://github.com/kerwanp/spark/issues"
  },
  "homepage": "https://sparkjs.run",
  "license": "MIT",
  "devDependencies": {
    "@japa/assert": "^4.2.0",
    "@japa/expect": "^3.0.7",
    "@japa/expect-type": "^2.0.4",
    "@japa/file-system": "^3.0.0",
    "@japa/runner": "^4.0.0",
    "@sparkjs/eslint-config": "workspace:*",
    "@sparkjs/typescript-config": "workspace:*",
    "@swc/core": "1.15.5",
    "@types/escape-html": "^1",
    "@types/lodash.get": "^4",
    "@types/node": "^25.0.2",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^7.0.0",
    "prettier": "^3.7.4",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@sindresorhus/is": "^7.2.0",
    "@standard-schema/spec": "^1.1.0",
    "clsx": "^2.1.1",
    "csstype": "^3.2.3",
    "escape-html": "^1.0.3",
    "lodash.get": "^4.4.2",
    "style-object-to-css-string": "^1.1.3",
    "tailwind-merge": "^3.4.0",
    "type-fest": "^5.3.1"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
