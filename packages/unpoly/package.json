{
  "name": "@sparkjs/unpoly",
  "description": "Unpoly integration for SparkJS with Network Protocol implementation",
  "version": "0.0.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "c8 yarn quick:test",
    "build": "yarn clean && tsc",
    "dev": "tsc --watch",
    "version": "yarn build",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "spark",
    "sparkjs",
    "unpoly",
    "typescript"
  ],
  "author": {
    "name": "Martin Paucot",
    "email": "contact@martin-paucot.fr"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kerwanp/spark",
    "directory": "packages/unpoly"
  },
  "bugs": {
    "url": "https://github.com/kerwanp/spark/issues"
  },
  "homepage": "https://sparkjs.run",
  "license": "MIT",
  "devDependencies": {
    "@japa/assert": "^4.2.0",
    "@japa/expect": "^3.0.7",
    "@japa/expect-type": "^2.0.4",
    "@japa/file-system": "^3.0.0",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.0.0",
    "@sparkjs/eslint-config": "workspace:*",
    "@sparkjs/spark": "workspace:*",
    "@sparkjs/typescript-config": "workspace:*",
    "@swc/core": "1.15.5",
    "@types/node": "^25.0.2",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^7.0.0",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@sparkjs/spark": "workspace:*"
  },
  "dependencies": {
    "@sindresorhus/is": "^7.2.0"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
